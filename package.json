{
  "name": "nbrglm-goway",
  "displayName": "NBRGLM GoWay",
  "description": "Opinionated VS Code tools and generators for structured Golang projects by NBRGLM.",
  "version": "0.0.6",
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/nbrglm/goway"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "publisher": "nbrglm",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nbrglm-goway.newGoApiHandler",
        "title": "NBRGLM GoWay: New Go API Handler"
      }
    ],
    "configuration": {
      "title": "NBRGLM GoWay",
      "properties": {
        "nbrglm-goway.handlers.baseImportPath": {
          "type": "string",
          "default": "github.com/username/projectname",
          "description": "The base import path for your Go project (e.g., github.com/username/projectname)."
        },
        "nbrglm-goway.handlers.metricsNamespace": {
          "type": "string",
          "default": "myapp",
          "description": "Namespace for Prometheus metrics"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}